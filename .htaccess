<IfModule mod_rewrite.c>
    RewriteEngine On

    # Establece la base de la URL para la reescritura.
    # Tu proyecto está en /Markdown2Video/, así que esta línea es importante.
    RewriteBase /Markdown2Video/

    # Redirige todas las peticiones que no son a un archivo o directorio existente
    # al script index.php, pasando la URL como un parámetro 'url'.
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ index.php?url=$1 [L,QSA]
</IfModule>

# Opcional: Medidas de seguridad adicionales
# Deshabilitar la visualización de listados de directorios
Options -Indexes

# Proteger archivos sensibles como .env
<FilesMatch "\.(env|log|ini)$">
    Order allow,deny
    Deny from all
</FilesMatch>